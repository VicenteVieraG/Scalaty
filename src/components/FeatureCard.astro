---
import { HandMetal } from "@lucide/astro";
import { twMerge } from "tailwind-merge";
import type { HTMLAttributes } from "astro/types";

export interface FeatureInfo {
	title: string;
	description: string;
	icon: "HandMetal";
};

interface Props extends Readonly<FeatureInfo>,
	Omit<HTMLAttributes<"article">, "title"> {
		readonly className?: string | string[];
	};
const { title, description, icon, className, ...props } = Astro.props;
---

<article class:list={twMerge(["grid grid-cols-[auto_1fr] grid-rows-2", className])} {...props}>
	{ icon === "HandMetal" && <HandMetal class="text-primary row-span-full" size={25} stroke-width={1.2} /> }
	<h3 class="font-semibold" set:text={ title } />
	<p class="text-sm" set:text={ description } />
</article>