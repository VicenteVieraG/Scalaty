---
import Navbar from "@components/Navbar.astro";
import Hero from "@components/Hero.astro";
import { twMerge } from "tailwind-merge";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"main"> {
	readonly className?: string | string[];
};
const { className, ...props } = Astro.props;
---

<main class:list={twMerge(["", className])} { ...props }>
	<!-- <div class="glass size-full absolute" /> -->
	<Navbar className="top-4 mb-16 sm:mx-6" />
	<Hero />
</main>

<style>
	main {
		background-image: url(../../assets/background.png);
		background-position: top center;
		background-repeat: no-repeat;
		background-clip: border-box;
		background-size: cover;
		background-size: max(100%, 40rem) auto;
		min-height: 100svh;
		padding: 0;
		position: relative;
	}
	main::after {
		content: "";
		width: 100%;
		height: 10%;
		position: absolute;
		bottom: 0;
		background: linear-gradient(to top, var(--color-base-100) 5%, transparent);
	}
</style>