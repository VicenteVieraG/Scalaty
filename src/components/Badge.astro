---
import { twMerge } from "tailwind-merge";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
	text: Readonly<string>;
	readonly className?: string | string[];
};
const { text, className, ...props } = Astro.props;
---

<div
	set:text={text}
	class:list={twMerge([
		"badge badge-sm glass",
		"text-nowrap px-6 py-5",
		"sm:badge-md sm:px-8",
		className
	])}
	style="
		--glass-opacity: 0.1;
		--glass-text-shadow-opacity: 0.2;"
	{...props}>
	<slot />
</div>